<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/wall3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gm.donate.Main3Activity">

    <EditText
        android:id="@+id/editTextemail"
        android:drawableLeft="@drawable/ic_action_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextpassword"
        android:layout_width="300dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonregister"
        android:layout_alignStart="@+id/editTextemail"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonregister"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/editTextpassword"
        android:layout_marginBottom="71dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_blue_bright"
        android:text="SIGN UP "
                            />

    <TextView
        android:id="@+id/textView3"

        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonregister"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonregister"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:textColor="@android:color/background_dark"
        android:text="already have account?Login"
        android:visibility="visible" />



</RelativeLayout>
